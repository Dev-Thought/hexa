{
  "preRelease": "preview",
  "increment": "conventional:angular",
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "push": true,
    "commit": true
  },
  "github": {
    "release": true,
    "preRelease": true,
    "releaseName": "Hexa ${version}",
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true
  }
}